# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# All files
[*]
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

# PowerShell files
[*.ps1]
indent_style = space
indent_size = 2

# SQL files
[*.sql]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files
[*.json]
indent_style = space
indent_size = 2

# Text log files
[*.{txt,log}]
indent_style = space
indent_size = 2

# XML Schema files
[*.xsd]
indent_style = space
indent_size = 2

# GitVersion configuration
[GitVersion.yml]
indent_style = space
indent_size = 2

# Docker Compose files
[docker-compose.yml]
indent_style = space
indent_size = 2

# Environment files
[.env*]
indent_style = space
indent_size = 2
